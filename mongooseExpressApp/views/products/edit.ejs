<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit product</title>
</head>
<body>
    <h1>Product Details:</h1>
    <form action="/products/<%= product._id %>?_method=PUT" method="POST">
        <label for="productName">Product name:</label>
        <input type="text" name="productName" id="productName" placeholder="Product Name" value="<%= product.productName %>">
        
        <label for="price">Product price:</label>
        <input type="number" name="price" id="price" placeholder="Product Price" value="<%= product.price %>">
        <label for="category">Product category:</label>
        <section id="category">
            <!-- <label for="meat">Meat</label>
            <input type="radio" name="category" value="meat">

            <label for="veg">Vegetables</label>
            <input type="radio" name="category" value="veg"> -->

            <% for(let category of categories) { %>
                <label for="meat"><%= category %></label>
                <input type="radio" name="category" value="<%= category %>" <%= product.category === category ? "checked" : "" %>>
            <% } %>
        </section>
        <a href="/products/<%=product._id%>">to details</a>
        <button>Edit</button>
    </form>
</body>
</html>